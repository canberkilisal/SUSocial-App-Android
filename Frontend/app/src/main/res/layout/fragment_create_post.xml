<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000066"
    tools:context=".FragmentCreatePost">

    <EditText
        android:id="@+id/txtCreatePost"
        android:layout_width="330dp"
        android:layout_height="194dp"
        android:layout_marginTop="76dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:hint="What do you think?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FFFFFF"
        android:text="Post"
        android:textColor="#000066"
        android:textSize="18sp"
        android:textStyle="bold"
        app:iconPadding="30dp"
        app:iconTint="#5A1EC5"
        app:layout_constraintEnd_toEndOf="@+id/txtCreatePost"
        app:layout_constraintStart_toStartOf="@+id/txtCreatePost"
        app:layout_constraintTop_toBottomOf="@+id/txtCreatePost" />
</androidx.constraintlayout.widget.ConstraintLayout>